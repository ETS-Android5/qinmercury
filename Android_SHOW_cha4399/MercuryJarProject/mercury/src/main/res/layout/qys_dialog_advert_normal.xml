<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/qys_mgc_shape_rectangle_bg">

    <LinearLayout
        android:id="@+id/ad_btn_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bn_left"
            android:text="继续观看"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/qys_plugin_selector_alert_dialog_btn1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="18sp" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#99cccccc" />

        <TextView
            android:id="@+id/bn_right"
            android:text="关闭"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/qys_plugin_selector_alert_dialog_btn2"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="#ff0000"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/ad_line_v"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_above="@id/ad_btn_ll"
        android:background="#99cccccc" />

    <TextView
        android:id="@+id/tv_title"
        android:text="@string/qys_dialog_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ad_line_v"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center|left"
        android:maxLines="2"
        android:paddingBottom="4dp"
        android:textColor="#333333"
        android:textSize="15sp" />
</RelativeLayout>