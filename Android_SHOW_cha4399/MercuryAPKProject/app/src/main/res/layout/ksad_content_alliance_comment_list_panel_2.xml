<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ksad_photo_comment_list_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="#00000000"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/ksad_photo_comment_list_panel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="3"
        android:background="@drawable/ksad_photo_bottom_panel_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="热门评论"
            android:textColor="#151924"
            android:textSize="12dp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ksad_photo_comment_list_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ksad_photo_comment_list_no_data_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无评论，来抢沙发"
                android:textColor="#888B90"
                android:textSize="12dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ksad_photo_comment_list_no_network_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载失败，点击重试"
                android:textColor="#888B90"
                android:textSize="12dp" />

            <Button
                android:id="@+id/ksad_photo_comment_list_no_network_retry"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/ksad_photo_comment_retry_load_button_bg"
                android:text="重试"
                android:textColor="#FFFEFFFF"
                android:textSize="14dp"
                android:visibility="gone" />
        </LinearLayout>

        <com.ksad.lottie.LottieAnimationView
            android:id="@+id/ksad_photo_comment_loading_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ksad_photo_comment_list_panel_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/ksad_photo_comment_list_panel_close_btn_2" />

    </RelativeLayout>
</LinearLayout>
