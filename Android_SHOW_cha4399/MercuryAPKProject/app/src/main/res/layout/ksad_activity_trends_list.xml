<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#888888"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/ksad_content_trends_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/ksad_trends_topPanel"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/ksad_trends_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/ksad_content_navi_back" />

        <TextView
            android:id="@+id/ksad_trends_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@drawable/ksad_trend_title_bg"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:maxEms="15"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="张三张三张三张三张三张三张三张三张"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|left"
            android:layout_marginRight="14dp" />
    </RelativeLayout>
</FrameLayout>