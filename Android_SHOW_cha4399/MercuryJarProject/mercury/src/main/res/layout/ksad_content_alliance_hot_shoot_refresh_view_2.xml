<?xml version="1.0" encoding="utf-8"?>
<com.kwad.sdk.contentalliance.refreshview.KsAdHotShootRefreshView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ksad_shoot_refresh_view"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/ksad_pull_to_refresh_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="下拉刷新内容"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold" />

    <com.ksad.lottie.LottieAnimationView
        android:id="@+id/ksad_pull_to_refresh_animation_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"/>
</com.kwad.sdk.contentalliance.refreshview.KsAdHotShootRefreshView>