<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <com.miui.zeus.mimo.sdk.view.EventRecordRelativeLayout
        android:id="@+id/ad_image_layout"
        android:layout_width="427dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.miui.zeus.mimo.sdk.view.FlexibleImageView
            android:id="@+id/ad_picture_view"
            android:layout_width="427dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_adMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ad_picture_view"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/skip_background"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#ffffff"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/close_v2_bg"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/banner_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/ad_picture_view"
            android:background="#ffffff">

            <TextView
                android:id="@+id/download_btn"
                android:layout_width="94dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/start_download_btn_bg"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/download_btn"
                android:gravity="center">

                <TextView
                    android:id="@+id/brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:textColor="#4d4d4d"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/brand"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:textColor="#b3b3b3"
                    android:textSize="11sp" />
            </RelativeLayout>
        </RelativeLayout>
    </com.miui.zeus.mimo.sdk.view.EventRecordRelativeLayout>
</RelativeLayout>