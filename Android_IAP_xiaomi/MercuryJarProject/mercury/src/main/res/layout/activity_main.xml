<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="64dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btn_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="检查读写SDCard权限" />

        <Button
            android:id="@+id/btn_permission_phone_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="检查读取手机状态权限" />

        <Button
            android:id="@+id/btn_switch_milink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="switchMilink"
            android:text="不使用milink请求"/>

        <Button
            android:id="@+id/switch_anti_mode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="防沉迷模式切换"
            android:onClick="switchAntiMode"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_wap_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信wap支付-可消耗" />

        <Button
            android:id="@+id/btn_wap_unrepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信wap支付-不可消耗" />

        <Button
            android:id="@+id/btn_wap_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信wap支付-金额支付" />

        <Button
            android:id="@+id/btn_wap_feecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计费码金额支付" />

        <Button
            android:id="@+id/btn_wap_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已知订单支付" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付宝支付"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btn_ali_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付宝支付-可消耗" />

        <Button
            android:id="@+id/btn_ali_unrepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付宝支付-不可消耗" />

        <Button
            android:id="@+id/btn_ali_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付宝支付-金额支付"
            android:onClick="aliFee"/>

        <Button
            android:id="@+id/btn_ali_feecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计费码金额支付"
            android:onClick="aliFeeCode"/>

        <Button
            android:id="@+id/btn_ali_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已知订单支付" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQWAP支付"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btn_qq_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQwap支付-可消耗" />

        <Button
            android:id="@+id/btn_qq_unrepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQwap支付-不可消耗" />

        <Button
            android:id="@+id/btn_qq_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQwap支付-金额支付" />

        <Button
            android:id="@+id/btn_qq_feecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计费码金额支付" />

        <Button
            android:id="@+id/btn_qq_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已知订单支付" />

        <Button
            android:id="@+id/btn_verify_real_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="调用实名制" />
    </LinearLayout>
</ScrollView>
