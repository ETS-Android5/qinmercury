<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlHardcoded,SpUsage,ContentDescription">

    <!--播放器等公共模块-->
    <include layout="@layout/ksad_content_alliance_detail_photo_common" />

    <!--video top 区域蒙板-->
    <View
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_gravity="top"
        android:background="@drawable/ksad_photo_detail_top_mask_bg" />

    <!--video bottom 区域蒙板-->
    <View
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_gravity="bottom"
        android:background="@drawable/ksad_photo_detail_bottom_mask_bg" />

    <!--播放控制按钮-->
    <ImageButton
        android:id="@+id/ksad_video_control_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/ksad_photo_video_play_icon" />

    <!--水印-->
    <com.kwad.sdk.contentalliance.detail.photo.newui.WaterMarkView2
        android:id="@+id/ksad_video_water_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="75dp"
        android:background="#00000000" />

    <RelativeLayout
        android:id="@+id/ksad_video_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <!--作者信息和内容描述-->
        <com.kwad.sdk.contentalliance.detail.photo.newui.PhotoBottomView2
            android:id="@+id/ksad_photo_detail_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ksad_hot_video_container"
            android:layout_toLeftOf="@+id/ksad_photo_detail_bottom_toolbar" />

        <!--右侧按钮栏-->
        <LinearLayout
            android:id="@+id/ksad_photo_detail_bottom_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@id/ksad_hot_video_container"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="72dp" />

        <com.kwad.sdk.contentalliance.detail.photo.newui.toolbar.SoundtrackFuncButton
            android:id="@+id/ksad_photo_detail_bottom_soundstack"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_above="@id/ksad_hot_video_container"
            android:layout_marginRight="8dp" />

        <FrameLayout
            android:id="@+id/ksad_hot_video_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#33000000"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:textSize="12sp"
                android:text="热"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="18dp"
                android:background="@drawable/ksad_photo_hot_bg" />

            <TextView
                android:id="@+id/ksad_trends_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFCF50"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="36dp"
                android:fontFamily="sans-serif-medium"
                android:text="相关热点：蔡徐坤嘟嘴眼睛杀"
                android:singleLine="true"
                android:ellipsize="marquee" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/ksad_photo_hot_enter" />
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ksad_slide_play_like_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <!--播放器进度条 拖拽进度提示-->
    <LinearLayout
        android:id="@+id/ksad_video_seek_tip_layout"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="66dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/ksad_video_seek_progress"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="21dp"
            android:textStyle="bold"
            tools:text="00:27" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ksad_video_seek_line" />

        <TextView
            android:id="@+id/ksad_video_seek_duration"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="#80FFFFFF"
            android:textSize="21dp"
            android:textStyle="bold"
            tools:text="00:27" />
    </LinearLayout>

    <!--播放器进度条 支持拖拽-->
    <com.kwad.sdk.core.view.ScaleAnimSeekBar
        android:id="@+id/ksad_video_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="bottom|center"
        android:visibility="gone" />

    <include
        layout="@layout/ksad_content_alliance_loading_detail"
        tools:visibility="gone" />

    <include
        layout="@layout/ksad_content_alliance_detail_trend_mask" />

    <com.kwad.sdk.contentalliance.detail.photo.comment.CommentListPanel
        android:id="@+id/ksad_photo_comment_list_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>
