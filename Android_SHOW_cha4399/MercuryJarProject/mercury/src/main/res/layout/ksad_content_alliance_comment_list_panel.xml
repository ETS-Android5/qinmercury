<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ksad_photo_comment_list_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="#00000000"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/ksad_photo_comment_list_panel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="3"
        android:background="#ffffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ksad_photo_comment_fire"
            android:gravity="center"
            android:text="最热评论"
            android:textColor="#222222"
            android:textSize="17dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ksad_photo_comment_list_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ksad_photo_comment_list_no_data_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="172dp"
                android:background="@drawable/ksad_photo_comment_no_data" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="下载快手APP，抢先发布评论！"
                android:textColor="#C6C6C6"
                android:textSize="14dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ksad_photo_comment_list_no_network_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="111dp"
                android:background="@drawable/ksad_content_no_network" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="请检查网络是否正常"
                android:textColor="#C6C6C6"
                android:textSize="14dp" />

            <Button
                android:id="@+id/ksad_photo_comment_list_no_network_retry"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/ksad_photo_comment_retry_load_button_bg"
                android:text="重试"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />
        </LinearLayout>

        <com.ksad.lottie.LottieAnimationView
            android:id="@+id/ksad_photo_comment_loading_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ksad_photo_comment_list_panel_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/ksad_photo_comment_list_panel_close_bg" />

    </RelativeLayout>
</LinearLayout>
