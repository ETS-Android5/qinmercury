<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/qys_mgc_shape_rectangle_bg">

    <TextView
        android:text="@string/qys_plugin_dialog_no_wifi_title"
        android:id="@+id/ad_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="19sp" />

    <LinearLayout
        android:id="@+id/ad_btn_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:text="@string/qys_plugin_dialog_network_btn1"
            android:id="@+id/ad_btn1_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/qys_plugin_selector_alert_dialog_btn1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="#009dff"
            android:textSize="18sp" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#99cccccc" />

        <TextView
            android:text="@string/qys_plugin_dialog_network_btn2"
            android:id="@+id/ad_btn2_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/qys_plugin_selector_alert_dialog_btn2"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="#009dff"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/ad_line_v"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_above="@id/ad_btn_ll"
        android:background="#99cccccc" />

    <TextView
        android:text="@string/qys_plugin_dialog_no_wifi_msg"
        android:id="@+id/ad_msg_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ad_line_v"
        android:layout_below="@id/ad_title_tv"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center|left"
        android:maxLines="2"
        android:paddingBottom="4dp"
        android:textColor="#333333"
        android:textSize="15sp" />
</RelativeLayout>